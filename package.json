{
  "name": "mcp-server-antv",
  "version": "1.0.0",
  "description": "MCP Server for AntV visualization libraries - provides documentation context and examples",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "test": "jest",
    "test:tools": "npm run build && node test/manual-test.js",
    "test:server": "npm run build && node test/mcp-server.test.js",
    "test:simple": "npm run build && node test/simple-test.js",
    "test:local": "npm run test:simple"
  },
  "keywords": [
    "mcp",
    "antv",
    "visualization",
    "documentation",
    "context7"
  ],
  "author": "AntV Community",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.4.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "tsx": "^4.0.0",
    "@types/jest": "^29.0.0",
    "jest": "^29.0.0"
  },
  "bin": {
    "mcp-server-antv": "./dist/index.js"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
